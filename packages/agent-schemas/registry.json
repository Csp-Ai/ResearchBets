{
  "version": 2,
  "agents": [
    {
      "agent_id": "SlipRecognition",
      "objective": "Convert sportsbook slip text or images into normalized bet legs with extraction confidence.",
      "input_schema": "packages/agent-schemas/SlipRecognition.input.schema.json",
      "output_schema": "packages/agent-schemas/SlipRecognition.output.schema.json",
      "confidence_model": "field_level_confidence",
      "assumptions": [
        "Source media quality meets OCR thresholds.",
        "Sportsbook token dictionary is versioned and available."
      ],
      "kpi": [
        "leg_parse_success_rate",
        "field_extraction_accuracy"
      ],
      "logging_fields": [
        "agent_id",
        "event_id",
        "source_type",
        "sportsbook",
        "timestamp"
      ],
      "lifecycle_state": "active"
    },
    {
      "agent_id": "ContextVerification",
      "objective": "Read immutable game context and return evidence-backed factual records for each leg.",
      "input_schema": "packages/agent-schemas/ContextVerification.input.schema.json",
      "output_schema": "packages/agent-schemas/ContextVerification.output.schema.json",
      "confidence_model": "source_weighted_score",
      "assumptions": [
        "Provider timestamps are synchronized to UTC.",
        "Only read-only source connectors are used."
      ],
      "kpi": [
        "context_freshness_minutes",
        "evidence_completeness_rate"
      ],
      "logging_fields": [
        "agent_id",
        "event_id",
        "leg_id",
        "source_tag",
        "timestamp"
      ],
      "lifecycle_state": "active"
    },
    {
      "agent_id": "PatternClassification",
      "objective": "Classify slip structure into interpretable betting patterns without producing pick advice.",
      "input_schema": "packages/agent-schemas/PatternClassification.input.schema.json",
      "output_schema": "packages/agent-schemas/PatternClassification.output.schema.json",
      "confidence_model": "calibrated_probability",
      "assumptions": [
        "Classification labels are maintained in a controlled taxonomy.",
        "Inference must be separated from factual evidence fields."
      ],
      "kpi": [
        "label_agreement_rate",
        "assumption_precision"
      ],
      "logging_fields": [
        "agent_id",
        "event_id",
        "pattern_label",
        "timestamp"
      ],
      "lifecycle_state": "active"
    },
    {
      "agent_id": "Reflection",
      "objective": "Compare pre-game assumptions to realized outcomes and return structured post-game learning artifacts.",
      "input_schema": "packages/agent-schemas/Reflection.input.schema.json",
      "output_schema": "packages/agent-schemas/Reflection.output.schema.json",
      "confidence_model": "evidence_support_score",
      "assumptions": [
        "Outcome grading for each leg is available.",
        "Reflection is post-game only and cannot generate forward-looking advice."
      ],
      "kpi": [
        "assumption_alignment_rate",
        "reflection_completion_rate"
      ],
      "logging_fields": [
        "agent_id",
        "event_id",
        "game_id",
        "timestamp"
      ],
      "lifecycle_state": "active"
    }
  ]
}
