{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SlipRecognitionOutput",
  "type": "object",
  "required": ["event_id", "legs"],
  "properties": {
    "event_id": { "type": "string" },
    "legs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["leg_id", "player", "team", "stat_type", "threshold", "confidence"],
        "properties": {
          "leg_id": { "type": "string" },
          "player": { "type": "string" },
          "team": { "type": "string" },
          "stat_type": { "type": "string" },
          "threshold": { "type": "number" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
