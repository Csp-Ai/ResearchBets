{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "SharpMoneyDetector.input.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["event_id", "market", "ticket_pct", "handle_pct", "line_delta"],
