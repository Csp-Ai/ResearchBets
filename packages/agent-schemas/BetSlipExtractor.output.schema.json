{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "BetSlipExtractor.output.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["parse_status", "selections", "confidence"],
  "properties": {
    "parse_status": { "type": "string", "enum": ["success", "partial", "failed"] },
    "selections": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["market", "selection"],
        "properties": {
          "market": { "type": "string" },
          "selection": { "type": "string" },
          "odds": { "type": "number" }
        }
      }
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
  }
}
