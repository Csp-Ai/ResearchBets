{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ReflectionOutput",
  "type": "object",
  "required": ["event_id", "alignment", "breakpoints", "notes"],
  "properties": {
    "event_id": { "type": "string" },
    "alignment": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["claim", "evidence", "source_type", "timestamp", "confidence"],
        "properties": {
          "claim": { "type": "string" },
          "evidence": { "type": "string" },
          "source_type": { "type": "string", "enum": ["post_game_result"] },
          "timestamp": { "type": "string", "format": "date-time" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        },
        "additionalProperties": false
      }
    },
    "breakpoints": {
      "type": "array",
      "items": { "type": "string" }
    },
    "notes": { "type": "string" }
  },
  "additionalProperties": false
}
