# ==============================
# Public client-safe variables
# ==============================
# Safe to expose in browser bundles and logs.
PUBLIC_APP_URL=http://localhost:3000
PUBLIC_APP_NAME=ResearchBets

# ==============================
# Server runtime variables
# ==============================
# Server-only values. Keep out of frontend builds.
SERVER_NODE_ENV=development
SERVER_PORT=3000
SERVER_LOG_LEVEL=info

# ==============================
# Supabase integration
# ==============================
# NEXT_PUBLIC_SUPABASE_URL and NEXT_PUBLIC_SUPABASE_ANON_KEY are low sensitivity but should still
# be managed via environment configuration.
NEXT_PUBLIC_SUPABASE_URL=https://project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=replace-with-non-secret-anon-key

# High sensitivity secret. Never commit a real value.
SUPABASE_SERVICE_ROLE_KEY=replace-with-service-role-key

# ==============================
# Odds API integration
# ==============================
# Base URL is low sensitivity; API key is secret and must never be committed.
ODDS_API_BASE_URL=https://api.the-odds-api.com/v4
ODDS_API_KEY=

# ==============================
# WAL reliability / consensus
# ==============================
WAL_ALLOWLIST=official.researchbets.internal,book.researchbets.internal,aggregator.researchbets.internal
WAL_BLOCKLIST=
WAL_RATE_LIMITS_JSON={"official.researchbets.internal":1000,"book.researchbets.internal":1000,"aggregator.researchbets.internal":1000}
WAL_DOMAIN_TRUST_JSON={"official.researchbets.internal":1,"book.researchbets.internal":0.85,"aggregator.researchbets.internal":0.7}
WAL_CONSENSUS_MIN_SOURCES=2
WAL_RESULTS_REQUIRE_CONSENSUS=true
WAL_ODDS_REFRESH_STALENESS_MS=60000

# ==============================
# SportsDataIO integration
# ==============================
SPORTSDATAIO_API_KEY=
SPORTSDATAIO_BASE_URL=https://api.sportsdata.io/v3
